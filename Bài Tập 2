#include <iostream>
using namespace std;

// Cấu trúc lưu trữ phân số (Phân số có tử số và mẫu số)
struct PhanSo {
    int tu;   // tử số
    int mau;  // mẫu số
};

// Hàm tính ước chung lớn nhất (GCD - Greatest Common Divisor)
// Đầu vào: a và b là hai số nguyên
// Đầu ra: Giá trị GCD của a và b
int ucln(int a, int b) {
    if (b == 0)
        return a;
    return ucln(b, a % b);  // Gọi đệ quy cho đến khi tìm được UCLN
}

// Hàm rút gọn phân số
// Đầu vào: ps (PhanSo) là một phân số
// Đầu ra: Phân số được rút gọn về dạng tối giản
void rutGonPhanSo(PhanSo &ps) {
    int uoc = ucln(ps.tu, ps.mau);  // Tính UCLN của tử số và mẫu số
    ps.tu /= uoc;  // Chia tử số cho UCLN để rút gọn
    ps.mau /= uoc; // Chia mẫu số cho UCLN để rút gọn

    // Đảm bảo mẫu số luôn dương
    if (ps.mau < 0) {
        ps.tu = -ps.tu;
        ps.mau = -ps.mau;
    }
}

// Hàm nhập phân số từ người dùng
// Đầu vào: ps (PhanSo) là phân số cần nhập
// Đầu ra: Gán giá trị tử số và mẫu số cho phân số ps
void nhapPhanSo(PhanSo &ps) {
    cout << "Nhập tử số: ";
    cin >> ps.tu;
    cout << "Nhập mẫu số (khác 0): ";
    cin >> ps.mau;

    // Kiểm tra mẫu số không được bằng 0
    while (ps.mau == 0) {
        cout << "Mẫu số không thể bằng 0, vui lòng nhập lại: ";
        cin >> ps.mau;
    }
    rutGonPhanSo(ps);  // Tự động rút gọn sau khi nhập
}

// Hàm so sánh hai phân số
// Đầu vào: ps1 và ps2 là hai phân số cần so sánh
// Đầu ra: Trả về true nếu ps1 lớn hơn ps2, ngược lại trả về false
bool soSanhPhanSo(const PhanSo &ps1, const PhanSo &ps2) {
    // So sánh bằng cách nhân chéo (tử số của phân số này nhân mẫu số của phân số kia)
    return ps1.tu * ps2.mau > ps2.tu * ps1.mau;
}

// Hàm xuất phân số
// Đầu vào: ps là phân số cần xuất
// Đầu ra: In phân số ra màn hình
void xuatPhanSo(const PhanSo &ps) {
    if (ps.mau == 1) {
        cout << ps.tu << endl;
    } else {
        cout << ps.tu << "/" << ps.mau << endl;
    }
}

// Hàm chính
int main() {
    PhanSo ps1, ps2;

    // Nhập hai phân số
    cout << "Nhập phân số thứ nhất: " << endl;
    nhapPhanSo(ps1);

    cout << "Nhập phân số thứ hai: " << endl;
    nhapPhanSo(ps2);

    // So sánh và tìm phân số lớn hơn
    if (soSanhPhanSo(ps1, ps2)) {
        cout << "Phân số lớn nhất là: ";
        xuatPhanSo(ps1);
    } else {
        cout << "Phân số lớn nhất là: ";
        xuatPhanSo(ps2);
    }

    return 0;
}
